<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:customcontrols="clr-namespace:ExpressBase.Mobile.CustomControls"
             x:Class="ExpressBase.Mobile.CustomControls.Views.DataGrid">

    <ContentView.Content>
        <Grid x:Name="Container">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="35" x:Name="AddColumnDefinition"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <BoxView Grid.RowSpan="3"
                     Grid.ColumnSpan="2"
                     CornerRadius="4"
                     BackgroundColor="#eee">
            </BoxView>

            <Grid x:Name="SearchContainer" 
                  Grid.Row="0" 
                  Grid.Column="0" 
                  Grid.ColumnSpan="2"
                  IsVisible="true">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="34"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <customcontrols:EbXTextBox x:Name="SearchBox"
                       HeightRequest="34"
                       Grid.Row="0" 
                       Grid.Column="1" 
                       FontSize="12" 
                       TextChanged="SearchTextChanged"
                       Placeholder="Search..."
                       BackgroundColor="Transparent"
                       BorderColor="Transparent"
                       Keyboard="Text" />
                <Button x:Name="SearchBoxClearButton"
                        Grid.Column="2"
                        Text="✕"
                        FontSize="12"
                        HeightRequest="34"
                        BackgroundColor="Transparent"
                        BorderWidth="0"
                        Clicked="SearchBoxClearButton_Clicked"
                        IsVisible="False"/>
            </Grid>

            <Button x:Name="AddRowButton"
                    Grid.Row="1"
                    Grid.Column="1"
                    Padding="0"
                    HeightRequest="30"
                    WidthRequest="30"
                    VerticalOptions="Center"
                    CornerRadius="4"
                    BackgroundColor="#33b762"
                    Text="&#xf055;"
                    TextColor="White"
                    FontFamily="{DynamicResource FontAwesome}"
                    Margin="0,5,5,0"
                    Clicked="AddRowButtonClicked">
            </Button>

            <StackLayout x:Name="Body"
                         Margin="1"
                         Spacing="1"
                         BackgroundColor="Transparent"
                         Grid.Row="2"
                         Grid.ColumnSpan="2">
            </StackLayout>

            <BoxView x:Name="ReadOnlyMask"
                     IsVisible="False"
                     Grid.RowSpan="3"
                     Grid.ColumnSpan="2">
            </BoxView>

        </Grid>
    </ContentView.Content>
</ContentView>