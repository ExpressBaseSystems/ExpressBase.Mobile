<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="ExpressBase.Mobile.CustomControls.PopUpView"
      IsVisible="False"
      VerticalOptions="FillAndExpand">

    <BoxView  x:Name="ShadowView"
              BackgroundColor="Black"
              Opacity=".7">
    </BoxView>

    <Frame VerticalOptions="Center"
           x:Name="PopupWindowFrame"
           Margin="15"
           Padding="0"
           Scale="0"
           BackgroundColor="White"
           CornerRadius="10">
        <StackLayout Padding="0"
                     Spacing="0">
            <Label x:Name="PopupTitle"
                   FontSize="15"
                   Padding="10"
                   TextColor="#222"
                   FontFamily="{StaticResource Roboto-Regular}">
            </Label>
            <ContentView VerticalOptions="Center"
                         x:Name="Container">
            </ContentView>
            <Button x:Name="PopupCloseButton"
                    CornerRadius="0"
                    Padding="0"
                    Text="Close"
                    BackgroundColor="Transparent"
                    TextColor="#0076ff"
                    HorizontalOptions="FillAndExpand"
                    HeightRequest="50"
                    Clicked="PopupCloseButtonClicked">
            </Button>
        </StackLayout>
    </Frame>
</Grid>