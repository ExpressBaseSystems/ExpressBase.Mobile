<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:control="clr-namespace:ExpressBase.Mobile.CustomControls"
             x:Class="ExpressBase.Mobile.Views.MySolutions">

    <NavigationPage.TitleView>
        <Grid RowSpacing="0" ColumnSpacing="2" Padding="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="Solution Switcher" Grid.Column="0" FontSize="16" TextColor="White" VerticalOptions="Center"/>
        </Grid>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <ScrollView x:Name="scrollView" Grid.Row="0">
                <StackLayout
                    x:Name="SolutionsList"
                    BindableLayout.ItemsSource="{Binding MySolutions}"
                    Spacing="0">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0"
                                Padding="10"
                                BorderColor="{DynamicResource Gray-White}"
                                CornerRadius="0"
                                HasShadow="false">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.SolutionTapedCommand, Source={x:Reference SolutionsList}}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                <Grid ColumnSpacing="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <AbsoluteLayout Grid.Column="0">
                                        <Frame 
                                            HeightRequest="55"
                                            VerticalOptions="Center"
                                            WidthRequest="55"
                                            Padding="0"
                                            BackgroundColor="#eeeeee"
                                            BorderColor="#d4d5d8"
                                            HasShadow="False"
                                            CornerRadius="30">
                                            <Image Source="{Binding Logo}"/>
                                        </Frame>
                                        <Frame
                                            IsVisible="{Binding IsCurrent}"
                                            CornerRadius="8"
                                            BorderColor="White"
                                            Padding="0"
                                            HasShadow="False"
                                            AbsoluteLayout.LayoutFlags="PositionProportional"   
                                            AbsoluteLayout.LayoutBounds="1,1,15,15"
                                            BackgroundColor="#26bd26"/>
                                    </AbsoluteLayout>
                                    <Label 
                                        Text="{Binding SolutionName}"
                                        Grid.Column="1"
                                        FontSize="18"
                                        VerticalTextAlignment="Center"
                                        FontFamily="{StaticResource Roboto-Medium}"
                                        TextColor="{DynamicResource Gray-900}">
                                    </Label>
                                    <Button
                                        x:Name="DeleteSolution"
                                        Grid.Column="2"
                                        Padding="0"
                                        FontSize="15"
                                        Margin="0"
                                        Text="&#xf014;"
                                        TextColor="Red"
                                        BackgroundColor="Transparent"
                                        WidthRequest="50"
                                        FontFamily="{StaticResource FontAwesome}"
                                        Command="{Binding BindingContext.SolutionRemoveCommand,Source={x:Reference SolutionsList}}" CommandParameter="{Binding .}">
                                    </Button>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>

            <Frame
                Grid.Row="1"
                Margin="15,10"
                VerticalOptions="End"
                BackgroundColor="{StaticResource Blue-Dark}"
                HeightRequest="50"
                CornerRadius="6"
                Padding="0">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="NewSolution_Tapped"></TapGestureRecognizer>
                </Frame.GestureRecognizers>
                <Frame.Content>
                    <StackLayout>
                        <FlexLayout Direction="Row" JustifyContent="Center" VerticalOptions="FillAndExpand">
                            <Label 
                                TextColor="White"
                                Text="&#xf196;"
                                FontSize="18"
                                FontFamily="{StaticResource FontAwesome}"
                                VerticalTextAlignment="Center"/>
                            <Label 
                                TextColor="White"
                                Text="Add Solution"
                                Margin="15,0,0,0"
                                VerticalTextAlignment="Center"/>
                        </FlexLayout>
                    </StackLayout>
                </Frame.Content>
            </Frame>

            <!--loader-->
            <control:LoaderIconed 
                Grid.RowSpan="2"
                x:Name="Loader"
                IsVisible="{Binding IsBusy}" 
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                AbsoluteLayout.LayoutFlags="All">
            </control:LoaderIconed>
        </Grid>
    </ContentPage.Content>
</ContentPage> 