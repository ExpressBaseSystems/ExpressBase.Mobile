<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:ExpressBase.Mobile.CustomControls"
             x:Class="ExpressBase.Mobile.Views.SolutionSelect"
             xmlns:viewModel="clr-namespace:ExpressBase.Mobile.ViewModels"
             Title="Solution URL"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False"
             Style="{StaticResource ContentPageStyle}">

    <!--  Binding context for page  -->
    <ContentPage.BindingContext>
        <viewModel:SolutionSelectViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid>
            <ScrollView x:Name="scrollView" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <ScrollView.VerticalOptions>
                    <OnIdiom
                        x:TypeArguments="LayoutOptions"
                        Default="CenterAndExpand"
                        Phone="FillAndExpand" />
                </ScrollView.VerticalOptions>
                
                <StackLayout
                    BackgroundColor="{StaticResource Blue-Dark}"
                    VerticalOptions="FillAndExpand" 
                    WidthRequest="{OnPlatform Default='-1',
                                              UWP='350'}">
                    <Grid RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                    </Grid>

                    <Grid
                    Grid.Row="0"
                    x:Name="ListViewHeader"
                    Margin="0,0,0,0"
                    HeightRequest="275"
                    IsClippedToBounds="True"
                    RowSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition x:Name="iOSSafeArea" Height="0" />
                            <RowDefinition Height="265" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        ColumnSpacing="0"
                        HeightRequest="200"
                        Opacity="0.9"
                        RowSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="10*" />
                            </Grid.RowDefinitions>

                            <Label
                            x:Name="BrandName"
                            Margin="20,0,0,10"
                            Grid.Row="1"
                            FontFamily="{StaticResource Roboto-Regular}"
                            HorizontalOptions="StartAndExpand"
                            FontSize="32"
                            Text="Configure"
                            TextColor="White" />
                            
                            <Label
                            x:Name="HeaderText"
                            Margin="20,0,0,0"
                            Grid.Row="2"
                            FontFamily="{StaticResource Roboto-Regular}"
                            FontSize="22"
                            HorizontalOptions="StartAndExpand"
                            Text="Solution URL"
                            TextColor="White" />
                            
                        </Grid>

                        <Image
                        Grid.Row="1"
                        Margin="0,0,0,-60"
                        HorizontalOptions="StartAndExpand"
                        Opacity="1"
                        Source="HeaderTriangle.png"
                        VerticalOptions="EndAndExpand"
                        WidthRequest="170" />

                        <Image
                        Grid.Row="1"
                        Margin="0,0,0,-110"
                        HorizontalOptions="EndAndExpand"
                        Opacity="1"
                        Source="InvertedTriangle.png"
                        VerticalOptions="EndAndExpand"
                        WidthRequest="190" />
                    </Grid>

                    <StackLayout Grid.Row="1" BackgroundColor="White" VerticalOptions="FillAndExpand" Padding="0">

                        <Grid VerticalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <local:TextBox 
                               Margin="20,20,0,0"
                               Grid.Column="0"
                               x:Name="SolutionUrl" 
                               VerticalOptions="Center" 
                               Keyboard="Url"
                               ReturnType="Next"
                               Placeholder="solution.expressbase.com"
                               BackgroundColor="#f5fbff"
                               Text="{Binding SolutionUrl}"
                               IsEnabled="{Binding IsEnabled}"/>

                            <Button
                                x:Name="EditSolutionButton"
                                Grid.Column="1"
                                Margin="0,20,20,0"
                                Text="&#xf040;"
                                BackgroundColor="{StaticResource Blue-Dark}"
                                BorderColor="#508bf9"
                                BorderWidth="1"
                                TextColor="White"
                                CornerRadius="4"
                                WidthRequest="50"
                                Clicked="EditSolutionButton_Clicked"
                                FontFamily="{StaticResource FontAwesome}"/>

                            <!--  next button  -->
                            <Button
                                x:Name="SolutionSaveButton"
                                CornerRadius="0"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Text="Save"
                                VerticalOptions="End"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="{StaticResource Blue-Dark}"
                                TextColor="White"
                                Command="{Binding StoreSolutionUrl}"/>

                        </Grid>
                        
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <!--loader-->
            <ContentView 
                x:Name="PopupContainer"
                IsVisible="{Binding IsBusy}" 
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                AbsoluteLayout.LayoutFlags="All">
                <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <BoxView
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                        AbsoluteLayout.LayoutFlags="All"
                        BackgroundColor="#333333"
                        Opacity=".5"/>

                    <StackLayout 
                        Padding="20"
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                        AbsoluteLayout.LayoutFlags="All">
                        <Frame 
                            HasShadow="False"
                            BackgroundColor="White"
                            CornerRadius="6"
                            VerticalOptions="CenterAndExpand">
                            <Frame.Content>
                                <StackLayout Orientation="Vertical" Padding="0,0,0,0">
                                    <Grid IsVisible="{Binding ShowLoader}" Margin="0,10,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label
                                        Grid.Row="0"
                                        TextColor="Black" 
                                        VerticalOptions="Center" 
                                        Text="Validating solution..."
                                        FontSize="16"/>
                                        
                                        <ActivityIndicator
                                        HorizontalOptions="End"
                                        IsRunning="true" 
                                        Color="{StaticResource Blue-Dark}"
                                        Grid.Column="0"
                                        WidthRequest="30"
                                        HeightRequest="30"/>
                                    </Grid>

                                    <Grid x:Name="SolutionMetaGrid" IsVisible="{Binding ShowMessage}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Label Grid.Row="0" Margin="0,0,0,20" Grid.ColumnSpan="2" Text="{Binding Message}" TextColor="{Binding MessageColor}" FontSize="16"/>
                                        
                                        <Label Grid.Row="1" Grid.Column="0" Text="{Binding SolutionUrl}" FontSize="15" FontAttributes="Bold"/>

                                        <Image 
                                            Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="80" 
                                            HorizontalOptions="Start" Source="{Binding SolutionLogo}"/>

                                        <Button 
                                            x:Name="PopupCancel"
                                            Text="Cancel"
                                            BackgroundColor="White"
                                            HorizontalOptions="End"
                                            Margin="0,10,0,0"
                                            WidthRequest="60" HeightRequest="30"
                                            Padding="0"
                                            Grid.Row="3"
                                            TextColor="{StaticResource Blue-Dark}"
                                            BorderWidth="1" 
                                            BorderColor="{StaticResource Blue-Dark}"
                                            Grid.Column="0" 
                                            FontSize="12" 
                                            CornerRadius="4" 
                                            Clicked="PopupCancel_Clicked"/>

                                        <Button 
                                            Text="Confirm" 
                                            BackgroundColor="{StaticResource Blue-Dark}"
                                            Margin="0,10,0,0"
                                            WidthRequest="70"
                                            HorizontalOptions="End"
                                            HeightRequest="40"
                                            TextColor="White"
                                            Grid.Row="3" 
                                            Padding="0" 
                                            Command="{Binding ConfirmButtonCommand}"
                                            Grid.Column="1" 
                                            FontSize="12" 
                                            CornerRadius="4"/>

                                    </Grid>
                                </StackLayout>
                            </Frame.Content>
                        </Frame>
                    </StackLayout>
                </AbsoluteLayout>
            </ContentView>
            
        </Grid>
    </ContentPage.Content>
</ContentPage> 