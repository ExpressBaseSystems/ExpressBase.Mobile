<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExpressBase.Mobile.Views.Shared.Styles">

    <!--  Common style for labels  -->
    <Style x:Key="LabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Gray-Black}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <!--  Common style for frame  -->
    <Style x:Key="SideBarFrame" TargetType="Frame">
        <Setter Property="Padding" Value="0" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <!--  Common style for sidebar labels  -->
    <Style x:Key="SideBarIconStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontAwesome}" />
        <Setter Property="VerticalOptions" Value="Center"></Setter>
        <Setter Property="VerticalTextAlignment" Value="Center"></Setter>
        <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="0,0,0,0"></Setter>
        <Setter Property="WidthRequest" Value="25"></Setter>
    </Style>

</ResourceDictionary>