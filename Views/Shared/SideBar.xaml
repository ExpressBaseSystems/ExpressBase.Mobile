<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:ExpressBase.Mobile.Views"
             x:Class="ExpressBase.Mobile.Views.Shared.SideBar"
             xmlns:viewModel="clr-namespace:ExpressBase.Mobile.ViewModels.Shared"
             Title="SideBar">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="SideBarFrame" TargetType="Frame">
                <Setter Property="Padding" Value="0" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="CornerRadius" Value="0" />
                <Setter Property="Padding" Value="10,0,0,0"/>
            </Style>
            
            <Style x:Key="SideBarIconStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource FontAwesome}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="VerticalOptions" Value="Center"></Setter>
                <Setter Property="VerticalTextAlignment" Value="Center"></Setter>
                <Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
                <Setter Property="Margin" Value="0,0,0,0"></Setter>
                <Setter Property="WidthRequest" Value="25"></Setter>
                <Setter Property="TextColor" Value="{StaticResource Blue-Dark}"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  Binding context for page  -->
    <ContentPage.BindingContext>
        <viewModel:SideBarViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid BackgroundColor="#ffffff">
            <ScrollView 
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                AbsoluteLayout.LayoutFlags="All">
                <StackLayout 
                    Spacing="0"
                    VerticalOptions="FillAndExpand"
                    x:Name="SideBarLayout">
                    <StackLayout VerticalOptions="Start" >
                        <Frame 
                            HasShadow="False" 
                            BackgroundColor="{StaticResource Blue-Dark}" 
                            CornerRadius="0"
                            Padding="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Image
                                Grid.RowSpan="2"
                                Margin="16"
                                BackgroundColor="White"
                                HeightRequest="48"
                                WidthRequest="48" >
                                    <Image.Source>
                                        <UriImageSource Uri="{Binding UserDp}" 
			                                 CacheValidity="14" 
			                                 CachingEnabled="true"/>
                                    </Image.Source>
                                </Image>

                                <StackLayout
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Padding="0"
                                    Margin="0,16,16,4"
                                    Orientation="Horizontal"
                                    Spacing="0">
                                    <Label
                                        FontFamily="{StaticResource Roboto-Medium}"
                                        FontSize="16"
                                        HorizontalOptions="StartAndExpand"
                                        Text="{Binding UserName}"
                                        TextColor="White" />
                                </StackLayout>

                                <StackLayout
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Padding="0"
                                    Margin="0,0,16,0"
                                    Orientation="Horizontal"
                                    Spacing="0">
                                    <Label
                                        FontFamily="{StaticResource Roboto-Regular}"
                                        FontSize="12"
                                        HorizontalOptions="StartAndExpand"
                                        Text="{Binding UserEmail}"
                                        TextColor="White" />
                                </StackLayout>

                            </Grid>
                        </Frame>
                    </StackLayout>
                    <StackLayout VerticalOptions="FillAndExpand" Orientation="Vertical" Padding="0" Spacing="0">
                        <Label Text="Configurations" BackgroundColor="#eeeeee" Padding="10,10" FontAttributes="Bold"/>
                        <Frame Style="{StaticResource SideBarFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Path=BindingContext.ChangeSidCommand,Source={x:Reference SideBarLayout}}" 
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid Padding="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="&#xf140;" Style="{StaticResource SideBarIconStyle}"/>
                                <Label Grid.Column="1" Text="Change Solution" FontFamily="{StaticResource Roboto-Regular}"/>
                            </Grid>
                        </Frame>
                        <Frame Style="{StaticResource SideBarFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Path=BindingContext.SwitchAppCommand,Source={x:Reference SideBarLayout}}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid Padding="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="&#xf1e8;" Style="{StaticResource SideBarIconStyle}"/>
                                <Label Grid.Column="1" Text="Switch Application" FontFamily="{StaticResource Roboto-Regular}"/>
                            </Grid>
                        </Frame>
                        <Frame Style="{StaticResource SideBarFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Path=BindingContext.SwitchLocations,Source={x:Reference SideBarLayout}}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid Padding="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="&#xf041;" Style="{StaticResource SideBarIconStyle}"/>
                                <Label Grid.Column="1" Text="Locations" FontFamily="{StaticResource Roboto-Regular}"/>
                            </Grid>
                        </Frame>
                    </StackLayout>
                    <StackLayout VerticalOptions="End" Padding="0">
                        <Frame Style="{StaticResource SideBarFrame}">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Path=BindingContext.LogOutCommand,Source={x:Reference SideBarLayout}}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            <Grid Padding="0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="&#xf08b;" Style="{StaticResource SideBarIconStyle}"/>
                                <Label Grid.Column="1" Text="Logout" FontFamily="{StaticResource Roboto-Regular}"/>
                            </Grid>
                        </Frame>
                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>