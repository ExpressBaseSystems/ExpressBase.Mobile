<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:controls="clr-namespace:ExpressBase.Mobile.CustomControls"
             mc:Ignorable="d"
             x:Class="ExpressBase.Mobile.Views.Shared.MyLocations"
             Style="{StaticResource ContentPageStyle}">
    <NavigationPage.TitleView>
        <Grid RowSpacing="0" ColumnSpacing="2" Padding="0" BackgroundColor="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="Switch Location" x:Name="TitleLabel" VerticalOptions="Center" Style="{StaticResource ToolBarLabelStyle}" Grid.Column="0"/>
            <Button 
                x:Name="SearchButton"
                Text="&#xf002;" 
                Style="{StaticResource ToolBarButtonStyle}" 
                Grid.Column="1"
                Margin="0,0,10,0"
                Clicked="SearchButton_Clicked">
            </Button>

            <controls:TextBox
                IsVisible="False"
                x:Name="LocSearchBox"
                Placeholder="Search"
                FontSize="14"
                TextColor="White"
                PlaceholderColor="#d4d4d4"
                Grid.ColumnSpan="2"
                BorderColor="Transparent"
                BorderThickness="0"
                BackgroundColor="{DynamicResource Primary_Color}"
                TextChanged="LocSearchBox_TextChanged">
            </controls:TextBox>

            <Button 
                IsVisible="False"
                x:Name="SearchClear"
                Text="&#xf057;" 
                Style="{StaticResource ToolBarButtonStyle}" 
                BackgroundColor="{DynamicResource Primary_Color}"
                Grid.Column="1"
                Margin="0,0,10,0"
                Clicked="SearchClear_Clicked">
            </Button>

        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <ListView 
                Grid.Row="0"
                ItemsSource="{Binding Locations,Mode=TwoWay}"
                HasUnevenRows="true"
                ItemTapped="ListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Frame 
                                    Grid.RowSpan="2"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    HasShadow="False"
                                    Padding="0"
                                    Margin="10,0,15,0"
                                    BorderColor="{Binding Bordercolor}"
                                    HeightRequest="20"
                                    WidthRequest="20"
                                    CornerRadius="10"
                                    BackgroundColor="{Binding SelectionColor}">
                                    <BoxView 
                                        BackgroundColor="White"
                                        WidthRequest="8"
                                        HeightRequest="8"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center"
                                        CornerRadius="4">
                                    </BoxView>
                                </Frame>

                                <Label 
                                    Grid.Row="0" 
                                    Grid.Column="1" 
                                    Text="{Binding LongName}"
                                    FontFamily="{StaticResource Roboto-Medium}"
                                    FontSize="14">
                                </Label>

                                <Label 
                                    Grid.Row="1" 
                                    Grid.Column="1" 
                                    Text="{Binding ShortName}"
                                    FontFamily="{StaticResource Roboto-Regular}"
                                    FontSize="12"
                                    TextColor="{DynamicResource Gray-700}">
                                </Label>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button 
                Grid.Row="1"
                Text="Apply"
                BackgroundColor="{DynamicResource Primary_Color}"
                TextColor="White"
                CornerRadius="0"
                Command="{Binding ApplyLocationCommand}">
            </Button>

            <Label 
                x:Name="EmptyLabel"
                IsVisible="False"
                Grid.RowSpan="2"
                Text="Location not found."
                VerticalOptions="Center"
                HorizontalOptions="Center">
            </Label>

            <ContentView 
                Grid.RowSpan="2"
                x:Name="SearchLoader"
                IsVisible="False">
                <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <BoxView
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                        AbsoluteLayout.LayoutFlags="All"
                        BackgroundColor="#333333"
                        Opacity=".5"/>
                    <StackLayout 
                        Padding="30"
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                        AbsoluteLayout.LayoutFlags="All">
                        <Frame 
                            BackgroundColor="Transparent"
                            VerticalOptions="CenterAndExpand">
                            <Frame.Content>
                                <ActivityIndicator
                                    HorizontalOptions="Center"
                                    IsRunning="true" 
                                    Color="White"
                                    Grid.Column="0"
                                    WidthRequest="40"
                                    HeightRequest="40"/>
                            </Frame.Content>
                        </Frame>
                    </StackLayout>
                </AbsoluteLayout>
            </ContentView>

        </Grid>
    </ContentPage.Content>
</ContentPage>