<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="ExpressBase.Mobile.Views.MyActions">
    <NavigationPage.TitleView>
        <Grid RowSpacing="0" ColumnSpacing="2" Padding="0" BackgroundColor="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="Actions" VerticalOptions="Center" Style="{StaticResource ToolBarLabelStyle}" Grid.Column="0"/>
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <Grid BackgroundColor="White">
            <ScrollView x:Name="scrollView">
                <StackLayout
                    x:Name="actionList"
                    BindableLayout.ItemsSource="{Binding Actions}"
                    Spacing="0">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame
                                Margin="0"
                                Padding="0"
                                BorderColor="{DynamicResource Gray-White}"
                                CornerRadius="0"
                                HasShadow="false">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Path=BindingContext.ItemSelectedCommand, Source={x:Reference actionList}}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                <Grid ColumnSpacing="10" Padding="10,10,10,10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Frame 
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        HeightRequest="50"
                                        VerticalOptions="Center"
                                        WidthRequest="50"
                                        Padding="0"
                                        BackgroundColor="#dddee0"
                                        BorderColor="#d4d5d8"
                                        HasShadow="False"
                                        CornerRadius="25">
                                        <Label 
                                            Text="{Binding DescriptionL1}"
                                            FontSize="20"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            FontFamily="{StaticResource Roboto-Bold}"/>
                                    </Frame>
                                    <Label 
                                        Text="{Binding Description}"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        FontSize="16"
                                        FontFamily="{StaticResource Roboto-Medium}"
                                        TextColor="{DynamicResource Gray-900}"/>
                                    <Label 
                                        Text="{Binding EndsOn}" 
                                        FontAttributes="Bold" 
                                        Grid.Row="1" 
                                        Grid.Column="1"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>
            <!--loader-->
            <ContentView 
                x:Name="Loader"
                IsVisible="{Binding IsBusy}" 
                AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                AbsoluteLayout.LayoutFlags="All">
                <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <BoxView
                        AbsoluteLayout.LayoutBounds="0, 0, 1, 1" 
                        AbsoluteLayout.LayoutFlags="All"
                        BackgroundColor="#333333"
                        Opacity=".5"/>
                    <StackLayout 
                        Margin="20"
                        AbsoluteLayout.LayoutBounds="0.5, 0.5, -1, -1" 
                        AbsoluteLayout.LayoutFlags="PositionProportional">
                        <Frame 
                            HasShadow="False"
                            BackgroundColor="White"
                            CornerRadius="6"
                            VerticalOptions="Center">
                            <Frame.Content>
                                <StackLayout Orientation="Vertical">
                                    <Grid Margin="0,10,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            x:Name="LoaderMessage"
                                            Grid.Row="0"
                                            TextColor="Black" 
                                            VerticalOptions="Center" 
                                            Text="Loading..."
                                            FontSize="16"/>
                                        <ActivityIndicator
                                            HorizontalOptions="End"
                                            IsRunning="true" 
                                            Color="#508bf9"
                                            Grid.Column="0"
                                            WidthRequest="30"
                                            HeightRequest="30"/>
                                    </Grid>
                                </StackLayout>
                            </Frame.Content>
                        </Frame>
                    </StackLayout>
                </AbsoluteLayout>
            </ContentView>
        </Grid>
    </ContentPage.Content>
</ContentPage>