<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="ExpressBase.Mobile.Themes.FormStyles">

    <Style TargetType="Button"
           x:Key="NumericBoxIncrButton">
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="HeightRequest"
                Value="40"></Setter>
        <Setter Property="WidthRequest"
                Value="40"></Setter>
        <Setter Property="CornerRadius"
                Value="20"></Setter>
        <Setter Property="BorderColor"
                Value="#cccccc"></Setter>
        <Setter Property="BackgroundColor"
                Value="#eeeeee"></Setter>
        <Setter Property="BorderWidth"
                Value="1"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Frame"
           x:Key="GeoLocFrame">
        <Setter Property="BackgroundColor"
                Value="#eeeeee"></Setter>
        <Setter Property="HasShadow"
                Value="False"></Setter>
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="CornerRadius"
                Value="10"></Setter>
        <Setter Property="HeightRequest"
                Value="250"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="FupCameraButton">
        <Setter Property="BackgroundColor"
                Value="White"></Setter>
        <Setter Property="FontSize"
                Value="18"></Setter>
        <Setter Property="CornerRadius"
                Value="4"></Setter>
        <Setter Property="BorderColor"
                Value="#dadce0"></Setter>
        <Setter Property="BorderWidth"
                Value="1"></Setter>
        <Setter Property="Margin"
                Value="0"></Setter>
        <Setter Property="Text"
                Value="&#xf030;"></Setter>
        <Setter Property="FontAttributes"
                Value="Bold"></Setter>
        <Setter Property="TextColor"
                Value="#696969"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="FupFileButton">
        <Setter Property="BackgroundColor"
                Value="White"></Setter>
        <Setter Property="FontSize"
                Value="18"></Setter>
        <Setter Property="CornerRadius"
                Value="4"></Setter>
        <Setter Property="BorderColor"
                Value="#dadce0"></Setter>
        <Setter Property="BorderWidth"
                Value="1"></Setter>
        <Setter Property="Margin"
                Value="0"></Setter>
        <Setter Property="Text"
                Value="&#xf115;"></Setter>
        <Setter Property="TextColor"
                Value="#f7ab30"></Setter>
        <Setter Property="FontAttributes"
                Value="Bold"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="FupThumbCloseButton">
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="WidthRequest"
                Value="24"></Setter>
        <Setter Property="HeightRequest"
                Value="24"></Setter>
        <Setter Property="CornerRadius"
                Value="12"></Setter>
        <Setter Property="TextColor"
                Value="White"></Setter>
        <Setter Property="FontSize"
                Value="24"></Setter>
        <Setter Property="BackgroundColor"
                Value="Transparent"></Setter>
        <Setter Property="Text"
                Value="&#xf057;"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="DGEditRowButton">
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="HeightRequest"
                Value="30"></Setter>
        <Setter Property="WidthRequest"
                Value="30"></Setter>
        <Setter Property="CornerRadius"
                Value="4"></Setter>
        <Setter Property="BackgroundColor"
                Value="Transparent"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
        <Setter Property="Text"
                Value="&#xf014;"></Setter>
    </Style>

    <Style TargetType="Label"
           x:Key="PSIconLabel">
        <Setter Property="Padding"
                Value="10"></Setter>
        <Setter Property="FontSize"
                Value="16"></Setter>
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="Text"
                Value="&#xf078;"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Label"
           x:Key="SSIconLabel">
        <Setter Property="Padding"
                Value="10"></Setter>
        <Setter Property="FontSize"
                Value="16"></Setter>
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="Text"
                Value="&#xf002;"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Label"
           x:Key="DatePickerIcon">
        <Setter Property="Padding"
                Value="10"></Setter>
        <Setter Property="FontSize"
                Value="18"></Setter>
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="QRReaderButton">
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="CornerRadius"
                Value="6"></Setter>
        <Setter Property="FontSize"
                Value="16"></Setter>
        <Setter Property="Text"
                Value="&#xf029;"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="QRReaderClearButton">
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="BorderWidth"
                Value="1"></Setter>
        <Setter Property="BorderColor"
                Value="#ccc"></Setter>
        <Setter Property="CornerRadius"
                Value="6"></Setter>
        <Setter Property="FontSize"
                Value="14"></Setter>
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="HorizontalOptions"
                Value="Center"></Setter>
        <Setter Property="Text"
                Value="Clear"></Setter>
        <Setter Property="BackgroundColor"
                Value="White"></Setter>
    </Style>

    <Style TargetType="Grid"
           x:Key="QRReaderContainerGrid">
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="RowSpacing"
                Value="5"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="RatingControlButton">
        <Setter Property="HorizontalOptions"
                Value="Start"></Setter>
        <Setter Property="VerticalOptions"
                Value="Center"></Setter>
        <Setter Property="TextColor"
                Value="#eee"></Setter>
        <Setter Property="WidthRequest"
                Value="30"></Setter>
        <Setter Property="HeightRequest"
                Value="30"></Setter>
        <Setter Property="BackgroundColor"
                Value="Transparent"></Setter>
        <Setter Property="Text"
                Value="&#xf029;"></Setter>
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
    </Style>

    <Style TargetType="Label"
           x:Key="ControlValidationLable">
        <Setter Property="Padding"
                Value="0"></Setter>
        <Setter Property="FontSize"
                Value="14"></Setter>
        <Setter Property="TextColor"
                Value="Red"></Setter>
        <Setter Property="Margin"
                Value="2,0,0,0"></Setter>
        <Setter Property="IsVisible"
                Value="False"></Setter>
    </Style>

    <Style TargetType="Frame"
           x:Key="AudioRecordFrame">
        <Setter Property="Padding"
                Value="10,5"></Setter>
        <Setter Property="CornerRadius"
                Value="4"></Setter>
        <Setter Property="Margin"
                Value="0,5"></Setter>
    </Style>

    <Style TargetType="Button"
           x:Key="AudioPlayButton">
        <Setter Property="Padding"
                Value="5"></Setter>
        <Setter Property="FontFamily"
                Value="{DynamicResource FontAwesome}"></Setter>
        <Setter Property="WidthRequest"
                Value="30"></Setter>
        <Setter Property="HeightRequest"
                Value="30"></Setter>
        <Setter Property="BackgroundColor"
                Value="Transparent"></Setter>
        <Setter Property="HorizontalOptions"
                Value="Start"></Setter>
        <Setter Property="TextColor"
                Value="Green"></Setter>
    </Style>
    <Style TargetType="Slider"
           x:Key="AudioPlaySlider">
        <Setter Property="HorizontalOptions"
                Value="FillAndExpand"></Setter>
        <Setter Property="MinimumTrackColor"
                Value="{DynamicResource Primary_Color}"></Setter>
        <Setter Property="ThumbColor"
                Value="{DynamicResource Primary_Color}"></Setter>
        <Setter Property="MaximumTrackColor"
                Value="#ddd"></Setter>
    </Style>

</ResourceDictionary>